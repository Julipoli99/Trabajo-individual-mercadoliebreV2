<html>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/peliculas.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <%- include("partials/header")%>
    <body>
        <h1 style="text-align: start;"><%=pelicula.title%></h1>
        <div class="ul-detallepeli">
        <ul>
            <li>
                <p>Duracion:</p> <%=pelicula.length%>
            </li>

            <li>
                <p>Calificacion:</p> <%=pelicula.rating%>
            </li>

            <li>
                <p>Premios:</p> <%=pelicula.awards%>
            </li>

            <li>
                <p>Fecha de estreno:</p> <%=pelicula.release_date%>
            </li>

            <li>
                <p>Genero:</p> <%=pelicula.genero.name%>
            </li>

            
                <li><p>Actores:</p></li>
                <ul>
                <% for (let i = 0; i < pelicula.actores.length; i++) { %>

                    <li>
                        <%=pelicula.actores[i].first_name%> - <%=pelicula.actores[i].last_name%>
                    </li>
                <% } %>
                </ul>
        </ul>
</div>
                                <br>
                <a href="/peliculas/editar/<%=pelicula.id%>">
                    <button type="submit" id="editar-peli">Editar</button>
                </a>
                <form action="/peliculas/delete/<%=pelicula.id%>" method="POST">
